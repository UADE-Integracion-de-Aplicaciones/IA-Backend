{
  "parserOptions": {
    "ecmaVersion": 9,
    "sourceType": "script"
  },
  "env": {
    "es6": true,
    "node": true
  },
  "rules": {
    "camelcase": ["off"],
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "no-param-reassign": "error",
    "prefer-const": "error",
    "quotes": [
      "error",
      "single",
      {
        "avoidEscape": true
      }
    ],
    "strict": ["warn", "global"]
  }
}
